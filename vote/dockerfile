FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Copy requirements first (for layer caching)
COPY requirements.txt /app/

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . /app

# Expose port (Flask default)
EXPOSE 8080

# Run the app
CMD ["python", "app.py"]
